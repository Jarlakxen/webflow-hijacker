{{=|{ }|=}}

<body>
	<div ng-controller="RuleListCtrl" style="padding-bottom: 30px;">
		<div class="grey-base-panel">

			<form name="newRuleForm" class="form-inline">
				<fieldset>
					<legend>New Rule:</legend>

					<input name="newRuleNameInput" type="text" class="input-medium" placeholder="Name" ng-model="newRule.name" ng-maxlength="30" />

					<input name="newRuleRegExInput" type="text" class="input-xlarge" placeholder="RegEx" ng-model="newRule.regex" ng-maxlength="70" />

					<input name="newRuleDefaultEndpointInput" type="text" class="input-xxlarge" placeholder="http:// [ host ] : [ port ] / ..." ng-model="newRule.defaultEndpoint" ng-maxlength="80" />

					<button class="btn btn-primary" ng-click="addRule(newRule)" ng-disabled="!newRule.name || !newRule.regex || !newRule.defaultEndpoint">Add</button>
				</fieldset>				
			</form>

		</div>

		<div class="row-fluid">
			<div class="span12">

				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Rule</th>
							<th>Default Endpoint</th>
							<th style="text-align: center;">Options</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="rule in rules | orderBy:'name'">
							<td>{{rule.name}}</td>
							<td>{{rule.regex}}</td>
							<td>{{rule.defaultEndpoint}}</td>
							<td style="text-align: center;">
								<i class="icon-trash" ng-click="removeRule(rule)"></i>
							</td>
						</tr>
					</tbody>
				</table>

			</div>
		</div>
	</div>
</body>
